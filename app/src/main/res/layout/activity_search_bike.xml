<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.freefalltech.bikeshare.SearchBikeActivity" >

    <Button
        android:layout_width="180sp"
        android:layout_height="50sp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="21dp"
        android:id="@+id/startLocationListenerButton"
        android:text="Listen for location"
        android:clickable="true"
        android:onClick="locationStartListening"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="180sp"
        android:layout_height="50sp"
        android:text="stop listening location"
        android:clickable="true"
        android:onClick="locationStopListening"
        android:id="@+id/stopLocationListenerButton"
        android:layout_alignTop="@+id/startLocationListenerButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />








</RelativeLayout>
