<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="io.github.freefalltech.bikeshare.SearchBikeActivity" >


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/opener_main_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="15sp"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:text="Welcome to bikeshare"/>




    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intitalPermissionGif"
        android:src="@drawable/giphy"/>




    <Button
        android:layout_width="180sp"
        android:layout_height="50sp"
        android:text="stop listening location"
        android:clickable="true"
        android:onClick="locationStopListening"
        android:id="@+id/stopLocationListenerButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="17dp" />








</RelativeLayout>
